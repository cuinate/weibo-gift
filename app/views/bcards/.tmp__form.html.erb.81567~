<%= form_for(@bcard) do |f| %>
  <% if @bcard.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bcard.errors.count, "error") %> prohibited this bcard from being saved:</h2>

      <ul>
      <% @bcard.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
   <%= f.label :选择图片文件 %><br />
   <%= f.file_field :pic %>
   </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
