var pic_url = "<%= escape_javascript(@pic_url)%>"
var back_style = "background:" + pic_url + ";";
var pic_1024_div = $('<div/>', {
  		'id'    : "pic_1024",
		'style' : back_style
 }).append("<%= escape_javascript(render :partial =>"card_inputsomething")%>");


var markup  = $('<div/>',{
	'id'   : "pic_overlay"
}).append(pic_1024_div)
 
$(markup).hide().appendTo('body').fadeIn();



var opts = {
		image		:	pic_url,
		onClick		:	shoot,
		opacity		:	0.8,
		blurLevel	:	4
	}
	
	// Converting the #main div to a photoShoot stage:
var uploaded_pic = $('#pic_1024');	
	
uploaded_pic.photoShoot(opts);

